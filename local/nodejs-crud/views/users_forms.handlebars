<h2><a href='/'>Back to Home Page</a></h2>

<form id='search_users_forms_form' action='' method=''>
<!--- this form does not submit directly, the button handles all the interaction with backend -->
    <label> Search users for first name starting with:</label>
    <input id='search_users_forms' type='text' name='search_users_forms'>
    <button type="button" id="searchUsersFormsButton">Search</button>
</form>

<h3>Current Users Forms:</h3>
<table>
    <thead> 
        <th>User ID</th> 
        <th>OSU ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Form ID</th>
        <th>Type</th>
        <th>Link</th>
    </thead> 
    <tbody>
        {{#each users_forms}} 
        <tr> 
            <td>{{user_ID}}</td> 
            <td>{{OSU_ID}}</td>
            <td>{{first_name}}</td>
            <td>{{last_name}}</td>
            <td>{{form_ID}}</td>
            <td>{{type}}</td>
            <td>{{link}}</td>
        </tr> 
        {{/each}} 
    </tbody> 
</table> 

<h3>Add users to forms:</h3>
<form id="addusersforms" action="/users_forms" method="post">
    User: <select name="user_ID"> 
        {{#each users}}
        <option value="{{user_ID}}">{{first_name}} {{last_name}}</option>
        {{/each}}
    </select><br>
    Form: <select name="form_ID"> 
        {{#each forms}}
        <option value="{{form_ID}}">{{type}}</option>
        {{/each}}
    </select><br>
    <input type="Submit" value="Submit">
 </form>

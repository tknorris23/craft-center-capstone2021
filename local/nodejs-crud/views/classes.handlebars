<h3>Add new classes:</h3>
<form id="addclass" action="/classes" method="post">
    Category: <input type="text" name="category"><br>
    Title: <input type="text" name="section"><br>
    Instructor: <input type="text" name="instructor"><br>
    Term Offered: <input type="text" name="term"><br>
    Date Range: <input type="text" name="date"><br>
    Time: <input type="text" name="time"><br>
    Description: <input type="text" name="description"><br>
    Fee: <input type="number" name="fee"><br>
    <input type="submit" value="Submit">
 </form>
<br/>


<h3>Current Classes:</h3>
<table>
    <thead> 
        <th>Class ID</th> 
        <th>Category</th>
        <th>Section</th>
        <th>Instructor</th>
        <th>Term</th>
        <th>Date</th>
        <th>Time</th>
        <th>Fee</th>
        <th>Description</th>
        <th>Delete Button</th>
    </thead> 
    <tbody>
        {{#each classes}} 
        <tr> 
            <td>{{class_ID}}</td> 
            <td>{{category}}</td> 
            <td>{{section}}</td>
            <td>{{instructor}}</td>
            <td>{{term}}</td>
            <td>{{date}}</td>
            <td>{{time}}</td>
            <td>${{fee}}</td>
            <td>{{description}}</td>
            <td><button onclick="deleteClass({{class_ID}})">Delete</button></td>
        </tr> 
        {{/each}} 
    </tbody> 
</table> 
